<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_shape"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp20">

        <com.tripkipedia.custom.CMTextView
            android:id="@+id/tvTitle"
            style="@style/txt_000_18"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            tools:text="@string/app_name_" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/dp10"
            android:background="@color/gray_light__"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

        <com.tripkipedia.custom.CMTextView
            android:id="@+id/tvMessage"
            style="@style/txt_9b9_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle"
            tools:text="@string/logout_msg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp20"
            android:padding="@dimen/dp15"
            app:layout_constraintTop_toBottomOf="@+id/tvMessage">

            <LinearLayout
                android:id="@+id/llNo"
                android:layout_width="@dimen/dp0"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp15"
                android:layout_weight="1"
                android:gravity="center"
                >

                <com.tripkipedia.custom.CMTextView
                    android:id="@+id/tvNo"
                    style="@style/txt_000_18"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp35"
                    android:gravity="center"
                    tools:text="@string/btn_no" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llYes"
                android:layout_width="@dimen/dp0"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp15"
                android:layout_weight="1"
                android:gravity="center"
                >

                <com.tripkipedia.custom.CMTextView
                    android:id="@+id/tvYes"
                    style="@style/txt_000_18"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp35"
                    android:gravity="center"
                    tools:text="@string/btn_yes" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>