<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <data>

        <variable
            name="viewClickHandler"
            type="com.tripkipedia.ui.settings.termsAndConditions.viewmodel.TermsAndConditionsViewModel.ViewClickHandler" />

        <variable
            name="viewModel"
            type="com.tripkipedia.ui.settings.termsAndConditions.viewmodel.TermsAndConditionsViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@mipmap/settings_header" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                android:id="@+id/topbar"
                layout="@layout/topbar" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.github.captain_miao.optroundcardview.OptRoundCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:layout_marginStart="@dimen/dp10"
                        android:layout_marginTop="@dimen/dp25"
                        android:layout_marginEnd="@dimen/dp10"
                        android:layout_marginBottom="@dimen/dp10"
                        android:elevation="@dimen/dp50"
                        app:optRoundCardCornerRadius="@dimen/dp25"
                        app:optRoundCardElevation="@dimen/dp10">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_15sdp"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:layout_marginEnd="@dimen/_15sdp"
                                android:orientation="horizontal">

                                <com.tripkipedia.custom.CBTextView
                                    style="@style/txt_dark_20"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Legal"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <TableLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:divider="@color/black"
                                android:showDividers="middle"
                                android:stretchColumns="1">

                                <TableRow
                                    android:layout_marginStart="@dimen/_15sdp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_marginEnd="@dimen/_15sdp"
                                    android:layout_marginBottom="@dimen/_5sdp">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_vertical"
                                        android:orientation="horizontal">

                                        <com.tripkipedia.custom.CBTextView
                                            style="@style/txt_purple_14"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Tripkipedia Terms of Service"
                                            android:textStyle="bold" />
                                    </LinearLayout>


                                </TableRow>

                                <TableRow
                                    android:layout_marginStart="@dimen/_15sdp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_marginEnd="@dimen/_15sdp"
                                    android:layout_marginBottom="@dimen/_5sdp">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_vertical"
                                        android:orientation="horizontal">

                                        <com.tripkipedia.custom.CBTextView
                                            style="@style/txt_purple_14"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Tripkipedia Terms of Use for Website and Application"
                                            android:textStyle="bold" />
                                    </LinearLayout>


                                </TableRow>

                                <TableRow
                                    android:layout_marginStart="@dimen/_15sdp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_marginEnd="@dimen/_15sdp"
                                    android:layout_marginBottom="@dimen/_5sdp">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_vertical"
                                        android:orientation="horizontal">

                                        <com.tripkipedia.custom.CBTextView
                                            style="@style/txt_purple_14"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Voucher and Account Credit Terms"
                                            android:textStyle="bold" />
                                    </LinearLayout>

                                </TableRow>

                                <TableRow
                                    android:layout_marginStart="@dimen/_15sdp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_marginEnd="@dimen/_15sdp"
                                    android:layout_marginBottom="@dimen/_5sdp">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_vertical"
                                        android:orientation="horizontal">

                                        <com.tripkipedia.custom.CBTextView
                                            style="@style/txt_purple_14"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Tripkipedia VIP Terms and Conditions"
                                            android:textStyle="bold" />
                                    </LinearLayout>

                                </TableRow>

                                <TableRow
                                    android:layout_marginStart="@dimen/_15sdp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_marginEnd="@dimen/_15sdp"
                                    android:layout_marginBottom="@dimen/_15sdp">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_vertical"
                                        android:orientation="horizontal">

                                        <com.tripkipedia.custom.CBTextView
                                            style="@style/txt_purple_14"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Referral Program Terms"
                                            android:textStyle="bold" />
                                    </LinearLayout>

                                </TableRow>

                            </TableLayout>
                        </LinearLayout>
                    </com.github.captain_miao.optroundcardview.OptRoundCardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/dp20"
                        android:orientation="vertical">

                        <com.tripkipedia.custom.CBTextView
                            style="@style/txt_dark_20"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tripkipedia Terms of\nService"
                            android:textStyle="bold" />

                        <com.tripkipedia.custom.CMTextView
                            style="@style/txt_dark_14"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:alpha="0.8"
                            android:text="Sit aliqua aliqua quis occaecat sint occaecat est ea officia laboris tempor. Laboris velit reprehenderit sit quis exercitation voluptate cillum labore Lorem cillum non sunt enim proident.\nNon deserunt mollit velit est eiusmod labore culpa esse amet aliqua velit velit aliquip ex. Ea et aliqua incididunt id in veniam"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>

            </ScrollView>
        </LinearLayout>


    </FrameLayout>

</layout>