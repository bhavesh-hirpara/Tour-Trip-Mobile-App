<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Dialog_bg"
        android:gravity="center">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_List"
            android:layout_width="@dimen/_280sdp"
            android:layout_height="@dimen/_180sdp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/_15sdp"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <com.tripkipedia.custom.CBTextView
                        style="@style/txt_dark_20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_30sdp"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:text="Permissions"
                        android:textStyle="bold" />

                    <com.tripkipedia.custom.CMTextView
                        style="@style/txt_dark_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_30ssp"
                        android:layout_marginTop="@dimen/dp5"
                        android:text="Allow Tripkipedia to access your photos,\nmedia, and files on your device?" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_30ssp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <com.tripkipedia.custom.CMTextView
                            style="@style/txt_dark_12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:text="Don't ask again" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginEnd="@dimen/_30sdp"
                        android:gravity="end"
                        android:orientation="horizontal">

                        <com.tripkipedia.custom.CMTextView
                            style="@style/txt_purple_14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DENY"
                            android:textStyle="bold" />

                        <com.tripkipedia.custom.CMTextView
                            style="@style/txt_purple_14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:text="ALLOW"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>


        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

</layout>