<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:gravity="center">
<FrameLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <androidx.appcompat.widget.AppCompatImageView
        android:background="@mipmap/dialog_c_headeer"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_65sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:background="@mipmap/dialog_c_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:background="@mipmap/dialog_c_logo"
        android:layout_gravity="center|top"
        android:layout_marginTop="@dimen/_48sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
<LinearLayout
    android:layout_gravity="center|top"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_marginTop="@dimen/_170sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.tripkipedia.custom.CBTextView
        android:text="Congratulations!"
        android:includeFontPadding="false"
        style="@style/txt_purple_25"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.tripkipedia.custom.CBTextView
        android:includeFontPadding="false"
        android:text="Your trip to Black Ball has earned you:"
        style="@style/txt_dark_13"
        android:layout_marginTop="@dimen/_10sdp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.tripkipedia.custom.CMTextView
        android:includeFontPadding="false"
        android:text="- $20 Grab Voucher\n- 200 x T-coins\n- 10% OFF Grab Ride"
        style="@style/txt_dark_14"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_marginTop="@dimen/_25sdp"
        android:src="@mipmap/dialog_c_btn_p"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/close"
        android:src="@mipmap/dialog_c_btn_w"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>
</FrameLayout>

    </LinearLayout>

</layout>